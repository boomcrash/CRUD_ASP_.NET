@model ContactoModel
@{
    ViewBag.Title = "Editar Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="card">
  <div class="card-header">
    EDITAR CONTACTO
  </div>
  <div class="card-body">
    <form asp-action="Editar" asp-controller="Mantenedor" method="post"> 
        <input type="hidden" asp-for="IdContacto" class="form-control"/>
       
            <div class="mb-3">
                <label  class="form-label">Nombre</label>
                <input asp-for="Nombre" type="text" class="form-control" >
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Telefono</label>
                <input asp-for="Telefono" type="text" class="form-control">
                <span asp-validation-for="Telefono" class="text-danger"></span>

            </div>
            <div class="mb-3">
                <label class="form-label">Correo</label>
                <input asp-for="Correo" type="email" class="form-control">
                <span asp-validation-for="Correo" class="text-danger"></span>

            </div>

            <button type="submit" class="btn btn-primary">Editar</button>

            <a asp-action="Listar" asp-controller="Mantenedor" class="btn btn-warning">Volver a la Listas</a>
    
    </form>
  </div>
</div>
